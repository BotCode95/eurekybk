{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["src/**/*", "app.ts"]
}